<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.java.com.team.game.controller.ChangePasswordController"
            prefHeight="450.0" prefWidth="500.0"
            style="-fx-background-color: #f0f0f0;">

    <VBox spacing="25.0" AnchorPane.topAnchor="40.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
        </padding>

        <!-- Title -->
        <Label text="CHANGE PASSWORD" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>

        <Separator/>

        <!-- Current Password Input -->
        <VBox spacing="10.0">
            <Label text="Current Password:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <PasswordField fx:id="currentPasswordField" prefWidth="300.0" promptText="Enter current password"/>
        </VBox>

        <!-- New Password Input -->
        <VBox spacing="10.0">
            <Label text="New Password:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <PasswordField fx:id="newPasswordField" prefWidth="300.0" promptText="Enter new password"/>
        </VBox>

        <!-- Confirm New Password Input -->
        <VBox spacing="10.0">
            <Label text="Confirm New Password:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <PasswordField fx:id="confirmPasswordField" prefWidth="300.0" promptText="Confirm new password"/>
        </VBox>

        <!-- Status Message -->
        <Label fx:id="statusLabel" text="" textAlignment="CENTER" wrapText="true" visible="false"
               style="-fx-font-size: 14px;"/>

        <!-- Buttons -->
        <HBox spacing="20.0" alignment="CENTER">
            <Button fx:id="changeButton" mnemonicParsing="false" onAction="#handleChangePassword"
                    prefWidth="140.0" prefHeight="40.0" text="Change Password"
                    style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>

            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel"
                    prefWidth="140.0" prefHeight="40.0" text="Back to Menu"
                    style="-fx-font-size: 14px; -fx-background-color: #757575; -fx-text-fill: white;"/>
        </HBox>

        <!-- Information Message -->
        <Label text="For security, please enter your current password to confirm changes" textAlignment="CENTER"
               style="-fx-font-size: 12px; -fx-text-fill: #666666;"/>

    </VBox>

</AnchorPane>
