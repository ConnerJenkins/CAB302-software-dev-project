<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.java.com.team.game.controller.ChangeUsernameController"
            prefHeight="400.0" prefWidth="500.0"
            style="-fx-background-color: #f0f0f0;">

    <VBox spacing="25.0" AnchorPane.topAnchor="40.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
        </padding>
        
        <!-- Title -->
        <Label text="CHANGE USERNAME" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        
        <Separator/>
        
        <!-- Current Username Display -->
        <VBox spacing="10.0">
            <Label text="Current Username:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <Label fx:id="currentUsernameLabel" text="" 
                   style="-fx-font-size: 16px; -fx-text-fill: #2196F3; -fx-background-color: #e3f2fd; -fx-padding: 10px; -fx-background-radius: 5px;"/>
        </VBox>
        
        <!-- New Username Input -->
        <VBox spacing="10.0">
            <Label text="New Username:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextField fx:id="newUsernameField" prefWidth="300.0" promptText="Enter new username"/>
        </VBox>
        
        <!-- Status Message -->
        <Label fx:id="statusLabel" text="" textAlignment="CENTER" wrapText="true" visible="false"
               style="-fx-font-size: 14px;"/>
        
        <!-- Buttons -->
        <HBox spacing="20.0" alignment="CENTER">
            <Button fx:id="updateButton" mnemonicParsing="false" onAction="#handleUpdateUsername" 
                    prefWidth="140.0" prefHeight="40.0" text="Update Username"
                    style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" 
                    prefWidth="140.0" prefHeight="40.0" text="Back to Menu"
                    style="-fx-font-size: 14px; -fx-background-color: #757575; -fx-text-fill: white;"/>
        </HBox>
        
        <!-- Information Message -->
        <Label text="Username must be unique and cannot be empty" textAlignment="CENTER"
               style="-fx-font-size: 12px; -fx-text-fill: #666666;"/>
        
    </VBox>

</AnchorPane>
